generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ---- Shared Enums ----

enum AbilityGenerationMethod {
  POINT_BUY
  RANDOM
}

enum SpellTargetShape {
  SINGLE
  AOE_CIRCLE
  CONE
  LINE
  SQUARE
}

enum SpellTargetAffinity {
  FRIENDLY
  HOSTILE
  ALL
  ENVIRONMENT
}

// ---- Core Domain ----

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  name       String?
  image      String?
  emailVerified DateTime?
  createdAt  DateTime    @default(now())
  characters Character[]

  accounts Account[]
  sessions Session[]
}

model Character {
  id                String                   @id @default(cuid())
  userId            String
  name              String                   @default("New Adventurer")
  level             Int                      @default(1)
  ancestry          String?                  @map("race")
  charClass         String?
  background        String?
  alignment         String?
  proficiencies     Json?
  generationMethod  AbilityGenerationMethod  @default(POINT_BUY)
  abilityScores     Json
  pointBuyBudget    Int                      @default(27)
  createdAt         DateTime                 @default(now())
  updatedAt         DateTime                 @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  spells Spell[]

  @@index([userId])
}

model Spell {
  id          String              @id @default(cuid())
  characterId String
  name        String
  level       Int                 @default(0)
  shape       SpellTargetShape    @default(SINGLE)
  affinity    SpellTargetAffinity @default(HOSTILE)
  range       String              @default("Self")
  school      String?
  description String?
  damage      String?
  isCustom    Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  character Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@index([characterId])
}

// ---- NextAuth Models ----

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
