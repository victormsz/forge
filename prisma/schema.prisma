generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ---- Shared Enums ----

enum AbilityGenerationMethod {
  POINT_BUY
  RANDOM
}

enum SpellTargetShape {
  SINGLE
  AOE_CIRCLE
  CONE
  LINE
  SQUARE
}

enum SpellTargetAffinity {
  FRIENDLY
  HOSTILE
  ALL
  ENVIRONMENT
}

enum EquipmentSlot {
  MAIN_HAND
  OFF_HAND
  ARMOR
  SHIELD
}

enum UserRole {
  guest
  player
  dm
}

enum UserPlan {
  guest
  paid_player
  basic_dm
  premium_dm
}

enum PartyMemberRole {
  dm
  player
}

enum PartyInviteStatus {
  pending
  accepted
  declined
  revoked
  expired
}

enum PartyMessageType {
  text
  item
  image
  video
}

enum PartyAttachmentType {
  image
  video
}

// ---- Core Domain ----

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  role       UserRole    @default(player)
  plan       UserPlan    @default(paid_player)
  name       String?
  image      String?
  emailVerified DateTime?
  hashedPassword String?
  emailVerificationToken String? @unique
  emailVerificationExpires DateTime?
  createdAt  DateTime    @default(now())
  characters Character[]

  partiesOwned Party[] @relation("PartyOwner")
  partyMemberships PartyMember[]
  partyInvitesSent PartyInvite[] @relation("PartyInviter")
  partyMessages PartyMessage[]

  accounts Account[]
  sessions Session[]
}

model Character {
  id                String                   @id @default(cuid())
  userId            String
  name              String                   @default("New Adventurer")
  level             Int                      @default(1)
  ancestry          String?                  @map("race")
  charClass         String?
  subclass          String?
  background        String?
  alignment         String?
  armorBonus        Int                      @default(0)
  shieldBonus       Int                      @default(0)
  miscBonus         Int                      @default(0)
  proficiencies     Json?
  generationMethod  AbilityGenerationMethod  @default(POINT_BUY)
  abilityScores     Json
  levelUpChoices   Json?
  pointBuyBudget    Int                      @default(27)
  createdAt         DateTime                 @default(now())
  updatedAt         DateTime                 @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  spells Spell[]
  items  Item[]

  @@index([userId])
}

model Spell {
  id          String              @id @default(cuid())
  characterId String
  name        String
  level       Int                 @default(0)
  shape       SpellTargetShape    @default(SINGLE)
  affinity    SpellTargetAffinity @default(HOSTILE)
  range       String              @default("Self")
  school      String?
  description String?
  damage      String?
  isCustom    Boolean             @default(true)
  isPrepared  Boolean             @default(false)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  character Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@index([characterId])
}

model Item {
  id          String   @id @default(cuid())
  characterId String
  name        String
  category    String?
  cost        String?
  weight      Float?
  quantity    Int      @default(1)
  description String?
  notes       String?
  referenceId String?
  isCustom    Boolean  @default(true)
  equippedSlot EquipmentSlot?
  
  // Custom stat overrides/bonuses
  customStats Json?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  character Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@index([characterId])
}

model Party {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User          @relation("PartyOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members PartyMember[]
  invites PartyInvite[]
  chat    PartyChat?

  @@index([ownerId])
}

model PartyMember {
  id       String          @id @default(cuid())
  partyId  String
  userId   String
  role     PartyMemberRole @default(player)
  joinedAt DateTime        @default(now())

  party Party @relation(fields: [partyId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([partyId, userId])
  @@index([userId])
}

model PartyInvite {
  id          String            @id @default(cuid())
  partyId     String
  email       String
  token       String            @unique
  status      PartyInviteStatus @default(pending)
  invitedById String
  createdAt   DateTime          @default(now())
  expiresAt   DateTime
  respondedAt DateTime?

  party     Party @relation(fields: [partyId], references: [id], onDelete: Cascade)
  invitedBy User  @relation("PartyInviter", fields: [invitedById], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([partyId])
}

model PartyChat {
  id        String   @id @default(cuid())
  partyId   String   @unique
  createdAt DateTime @default(now())

  party    Party          @relation(fields: [partyId], references: [id], onDelete: Cascade)
  messages PartyMessage[]
}

model PartyMessage {
  id           String           @id @default(cuid())
  chatId       String
  senderId     String
  type         PartyMessageType
  text         String?
  itemSnapshot Json?
  createdAt    DateTime         @default(now())

  chat        PartyChat               @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender      User                    @relation(fields: [senderId], references: [id], onDelete: Cascade)
  attachments PartyMessageAttachment[]

  @@index([chatId])
  @@index([senderId])
}

model PartyMessageAttachment {
  id        String              @id @default(cuid())
  messageId String
  type      PartyAttachmentType
  url       String
  name      String?
  size      Int?
  mimeType  String?
  width     Int?
  height    Int?
  createdAt DateTime            @default(now())

  message PartyMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
}

// ---- NextAuth Models ----

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
